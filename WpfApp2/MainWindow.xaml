<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Currency Converter" Height="300" Width="400">
    <Grid>
        <ComboBox x:Name="FromCurrency" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="150"/>
        <ComboBox x:Name="ToCurrency" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="AmountTextBox" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="150"/>
        <Button Content="Convert" HorizontalAlignment="Right" Margin="0,50,10,0" VerticalAlignment="Top" Width="150" Click="ConvertButton_Click"/>
        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Center" Margin="10,100,10,0" VerticalAlignment="Top" TextAlignment="Center" FontSize="16"/>
    </Grid>
</Window>